<section class="content-header">
  <h1> Preferencias </h1>
</section>

<section class="content">

  <div class="row">
    <div class="col-xs-12">

      <div class="box box-primary">
        <form role="form">
          <div class="box-body">

            <div class="form-group">
              <label for="exampleInputEmail1">Avatar</label>
              <br/>
              <img src={{avatar}} width="128" height="128">
            </div>

            <div class="form-group">
              <label for="exampleInputEmail1">Nombre</label>
              {{input value=model.nombre class="form-control" placeholder="Nombre"}}
            </div>

            <div class="form-group">
              <label for="exampleInputPassword1">Frase</label>
              {{input value=model.frase class="form-control" placeholder="Frase"}}
            </div>
          </div>

          <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>


    </div>
  </div>
</section>
