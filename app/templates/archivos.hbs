<section class="content-header">
  <h1> Archivos <small> ... </small> </h1>
</section>

<section class="content">

  <div class="row">
    <div class="col-xs-12">

      <div class="padding">
        <button class="btn btn-success" {{action "actualizar"}}>Actualizar</button>
      </div>

      <div class="box">
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tbody>
              <tr>
                <th>Nombre</th>
                <th class='text-center'>Tipo</th>
                <th class='text-center'>Acciones</th>
              </tr>

              {{#each model.archivos as |item|}}
                {{huayra-archivo archivo=item tagName=""}}
              {{else}}
                <tr>
                  <td colspan=5 class='text-center text-danger'>No hay archivos para mostrar...</td>
                </tr>
              {{/each}}
            </tbody>

          </table>
        </div>
      </div>

    </div>
  </div>
</section>
